doctype html
html
    head
        style.
            .confirmedWindowContainer {
                width: 100%;
                height: 100%;
                border: 2px solid transparent;
                border: 2px solid transparent;
                border-radius: 20px;
                /*background-image: linear-gradient(#fff,#fff),linear-gradient(*/
                /*        180deg,#32d5e8,#8760cc);*/
                background-origin: border-box;
                background-clip: content-box,border-box;
            }
            .confirmedText {
                text-align: center;
                font-size: 20px;
                color: black;
                margin: auto;
                padding-top: 5%;
                justify-content: center;
            }
            .confirmedText a {
                color: black;
            }
            .confirmed {
                text-align: center;
                margin-top: 5%;
            }
            img {
                margin-left:45%;
                margin-top:3%;
            }
            button {
                border: none;
                margin: auto;
                padding: 10px 30px;
                font-size: 16px;
                color: #FFFFFF;
                min-width: 125px;
                max-height: 107px;
                height: 50px;
                cursor: pointer;
                background: linear-gradient(90deg, #32D5E8 0%, #8760CC 100%);
                border-radius: 20px;
                margin-bottom: 40px;
            }
            a {
                font-size: 18px;
                color: white;
            }
            .header {
                height: 40px;
                width: 100%;
                background-color: #26BD62;
            }
            .btn {
                color: rgb(128, 0, 255);
            }
